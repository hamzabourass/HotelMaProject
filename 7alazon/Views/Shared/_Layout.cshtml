
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top ">
        <div class="container">

            <div class="navbar-header">


            </div>

            <div class="navbar-collapse ">

                <ul class="nav ">

                    <li class="id">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="id">@Html.ActionLink("Rooms", "Rooms", "Home")</li>

                    @if (Session["UserName"] != null)
                    {
                        <li class="id"> @Html.ActionLink("Booked Rooms", "ShowBookedRooms", "Home")</li>

                        <li class="id">@Html.ActionLink("LogOut", "Logout", "Users")</li>

                    }
                    @if (Session["UserName"] == null)
                    {
                        <li class="id">@Html.ActionLink("LogIn", "Login", "Users")</li>
                        <li class="id">@Html.ActionLink("Register", "Register", "Users")</li>
                    }
                    @if (Session["UserName"] != null && Session["UserType"].ToString() == "Admin")
                    {
                        <li class="id">@Html.ActionLink("Admin Panel", "Index", "Users")</li>

                    }



                </ul>
            </div>
        </div>
    </nav>
    


        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Mon application ASP.NET</p>
            </footer>
        </div>


        @Scripts.Render("~/bundles/jquery")

        @RenderSection("scripts", required: false)

</body>
</html>



<style>
    .navbar-collapse{
        color:white;
        text-emphasis-color:initial;

    }
    .id {
        font-weight: bold;
        color: dodgerblue;
        font-family: Aldhabi;
        margin-right: 100px;
        font-size: 1.875em;
    }

    .navbar {
        background-color: #BFFF95;
    }

    .navbar {
        margin-right: 20px;
        position: fixed;
        top: 0;
        left: 0;
        right: -20px;
        z-index: 999;
    }



    </style >
