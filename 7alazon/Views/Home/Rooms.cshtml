@model IEnumerable<_7alazon.Models.Room>

@{
    ViewBag.Title = "Rooms";
}


<br>
<br>
<div class="row">
    @foreach (var room in Model)
    {
        if (@room.RoomAvailability == false)
        {
            <div class="col-md-4">
                <div class="card">

                    <img src="@room.Photo" class="card-img-top" alt="Hotel Image">
                    <h2 class="card-title">@room.RoomPrice DH</h2>


                    <a href="@Url.Action("RoomDetails", "Home", new { id = room.RoomID })" class="btn btn-primary">View Details</a>


                    <div class="card-body">

                    </div>
                </div>
            </div>
            }
        }
        <br>

    </div>

<style>
    .btn.btn-primary {
        
        background-color: blue;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: underline;
    }


    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .card-title {
        font-size: 15px;
        font-weight: bold;
        text-align: center;
    }
</style>