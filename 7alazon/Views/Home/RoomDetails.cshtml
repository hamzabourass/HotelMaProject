@model _7alazon.Models.Room



@{
    ViewBag.Title = "RoomDetails";
}

<br>
<br>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<div class="hotel-container">
    <div class="hotel-image">
        <img src="@Model.Photo" alt="Hotel Image" style="width:550px; height: 350px;">
    </div>
    <div class="hotel-info">
        <h3>Room Number:</h3> <p> @Model.RoomNumber</p>
        <h3>Room Price :</h3> <p>@Model.RoomPrice</p>
        <h3>Room type:</h3> <p>  For @Model.RoomType person(s)</p>

    </div>

</div>

@if (@Model.RoomAvailability == false)
{
    <h3> Book from here :</h3>

    <form method="post" action="@Url.Action("BookRoom", "Home")">

        <p class="card-text">
            <input type="hidden" name="userName" value="@Session["UserName"]" />

            <div class="form-group">
                <label for="checkin">Check-in</label>
                <input type="date" class="form-control" id="checkin" name="checkIn" required>
            </div>
            <div class="form-group">
                <label for="checkout">Check-out</label>
                <input type="date" class="form-control" id="checkout" name="checkOut" required>
            </div>
            <input type="hidden" name="roomId" value="@Model.RoomID" />
            <button type="submit" class="btn btn-primary">Book Room</button>
        </p>
    </form>
}
else
{


    if (Session["UserName"] != null)
    {

<form method="post" action="@Url.Action("Unbook", "Home")">
    <input type="hidden" name="roomid" value="@Model.RoomID" />
    <br>
    <input type="submit" value="Unbook" class="btn btn-danger" />
</form>
        }
    else
    {
        <h3> Booked :(</h3>


    }

}






<style>
    .hotel-container {
        display: flex;
        align-items: center;
    }

    .hotel-image {
        margin-right: 100px;
    }

    .hotel-info h2 {
        margin-bottom: 10px;
    }

    .hotel-info p {
        margin: 0;
    }
</style>

<p>
    @Html.ActionLink("Back to Home", "Index") ||
    @Html.ActionLink("Hotel Rooms", "ShowRooms", new { id = @Model.HotelID })


</p>




