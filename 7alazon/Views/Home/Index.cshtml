@model IEnumerable<_7alazon.Models.Hotel>

@{
    ViewBag.Title = "Home Page";
}
<br>
<br>
<div class="row">
    @foreach (var hotel in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <h4 class="card-title">@hotel.HotelName</h4>

                <img src="@hotel.Photo" class="card-img-top" alt="Hotel Image">
                <br>
                <a href="@Url.Action("Details", "Home", new { id = hotel.HotelID })" class="btn btn-primary">View Details</a>

                <div class="card-body">

                </div>
            </div>
        </div>
    }
</div>

<style>
    .btn.btn-primary {
        margin-top: 10px;
        background-color: blue;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: underline;
    }


    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .card-title {
        font-size: 20px;
        font-weight: bold;
        text-align: center;
    }
</style>
