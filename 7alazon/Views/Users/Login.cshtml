@model _7alazon.Models.User


@{
    ViewBag.Title = "Login";
}
<br>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <h2>Login</h2>
    <div class="w3-content w3-section" style="max-width:700px">

        @using (Html.BeginForm("Login", "Users", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.UserPassword, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" value="Log In" class="btn btn-primary" />

            </div>
            <p class="text-center text-light mt-10">  <a href="register" class="col-md-0 "> Create an Account</a></p>


        }
    </div>
<style>
    .mySlides {
        display: none;
    }

    .w3-center {
        font-weight: bold;
        color: black;
        font-family: Andalus;
    }

    .form-group {
        border-radius: 50px;
    }
</style>
